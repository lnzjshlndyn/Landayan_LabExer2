<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.landayan.landayan_labexer2.SecondActivity">

    <Button
        android:id="@+id/btn_loadShared"
        android:text="Load Shared Preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp" />

    <Button
        android:id="@+id/btn_loadInternal"
        android:text="Load Internal Storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_loadShared"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <Button
        android:onClick="clearData"
        android:id="@+id/btn_clear"
        android:text="clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_loadInternal"
        android:layout_alignLeft="@+id/btn_loadInternal"
        android:layout_alignStart="@+id/btn_loadInternal"
        android:layout_marginTop="66dp" />

    <Button
        android:onClick="goBack"
        android:id="@+id/btn_back"
        android:text="back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_clear"
        android:layout_alignBottom="@+id/btn_clear"
        android:layout_alignRight="@+id/btn_loadInternal"
        android:layout_alignEnd="@+id/btn_loadInternal" />

</RelativeLayout>
